<head>
  <style>
    img{
      text-align: center;
      max-width: 70%;
      padding-left: 30%;
    }
    h1{
      color: red;
      text-align: center;
    }
    h3{
      color: darkgreen;
    }
    input{
      color: white;
      background-color: darkgreen;
      font-family: Georgia, 'Times New Roman', Times, serif;
      border-color: darkgreen;
      border-style: solid;
      border-width: 2px;
    }
    table td, table th {
      font-size: 1em;
      padding: 5px 7px 5px 7px;
    }
  </style>
</head>

@model PizzaBox.Client.Models.StoreViewModel

@{
    ViewData["Title"] = "Sales and Revenue";
}

<h1>Total sales and revenue</h1>
<br>

<form action="/store/menupizzeria" method="post">
  <h4><input type="submit" value="Back to menu"></h4>
</form>
<br>

<table>
  <tr>
      <td>
          <h4>Total amount of pizzas sold: @Html.DisplayFor(modelitem => Model.TotalAmount)</h4>
      </td>
  </tr>
  <tr>
      <td>
          <h4>Total revenue: $@Html.DisplayFor(modelItem => Model.TotalRevenue)</h4>
      </td>
  </tr>
</table>
<br>

<table>  
  <th>
    <tr>
      <td>
        <h3>Qty</h3>
      </td>
      <td></td>
      <td>
        <h3>Pizza Name</h3>
      </td>
      <td></td>
      <td>
        <h3>Total per Pizza</h3>
      </td>
    </tr>
  </th>
  
  @for (int i = 0; i < Model.RevenueAmountPerPizza.Count; i+=3)
  {
    <tr>
      <td>
          <h4>@Html.DisplayFor(modelItem => Model.RevenueAmountPerPizza[i])</h4>
      </td>
      <td></td>
      <td>
          <h4>@Html.DisplayFor(modelItem => Model.RevenueAmountPerPizza[i+1])</h4>
      </td>
      <td></td>
      <td>
          <h4>$@Html.DisplayFor(modelItem => Model.RevenueAmountPerPizza[i+2])</h4>
      </td>
    </tr>
  }        
</table>
